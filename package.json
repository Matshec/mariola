{
  "name": "mariola",
  "version": "0.0.0",
  "private": true,
  "main": "app.js",
  "scripts": {
    "start": "yarn server",
    "postinstall": "cd client && yarn install",
    "client": "cd client && yarn start",
    "server": "nodemon ./bin/www.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "CLIENT_ID=0 DATABASE_URL=sqlite://mariola-test.db DATABASE_LOGGING=false mocha --timeout 5000 --recursive"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "~1.18.2",
    "concurrently": "^3.5.1",
    "database": "file:config/database",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "express": "~4.15.5",
    "immutable": "^3.8.2",
    "jsonwebtoken": "^8.2.1",
    "morgan": "~1.9.0",
    "notification-service": "file:notification",
    "passport-mariola": "file:config/passport-mariola",
    "utils": "file:utils"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.2",
    "sqlite3": "^4.0.0"
  }
}
